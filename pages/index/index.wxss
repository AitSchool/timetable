.page-container{
  height: 100vh;
  background-color: #f7f6fb;
  display: flex;
  padding-top: 10rpx;
}

.page-left{
  flex: none;
  width: 150rpx;
}
.page-right{
  flex: 1;
  background-color: #fff;
 /* display: flex;
  flex-direction: column;*/
}

.lesson-section{
  /*flex: 1;*/
}

.swiper-section{
  /*flex: none;*/
  height: 230rpx;
}

.nav-item{
  position: relative;
  font-size: 12px;
  height: 100rpx;
  padding: 20rpx 30rpx 0;
  line-height: 30rpx;
  font-weight: 500;
}

.nav-item.active{
  color: #db3e49;
  background-color: #fff;
}

.nav-item.active:before{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 60rpx;
  width: 10rpx;
  content: '';
  background-color: #db3e49;
}

.swiper-section{
  height: 230rpx;
  padding: 0 10rpx;
  overflow: hidden;
}

.swiper-section .slide-image{
  width: 100%;
  height: 230rpx;
  background-color: #ccc;
  border-radius: 8rpx;
}

.lesson-item{
  padding: 0 20rpx;
}

.lesson-item-title{
  padding: 20rpx 0;
  line-height: 40rpx;
  font-size: 16px;
  color: #333;
}

.lesson-item-day{
  margin-bottom: 40rpx;
}

.day-item-time{
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 20rpx;
  font-size: 12px;
  color: #999;
  font-weight: 600;
}

.day-item-time:before{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 20rpx;
  width: 10rpx;
  content: '';
  background-color: #db3e49;
}

.day-item-content{
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.day-item-left{
  margin-right: 20rpx;
  flex: none;
}

.day-item-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 2px 4px 8px 0px rgba(46,61,73,0.2);
}

.day-item-lesson-name{
  line-height: 40rpx;
  font-size: 18px;
  color: #333;
  margin-bottom: 10rpx;
}

.day-item-lesson-teacher{
  line-height: 40rpx;
  font-size: 12px;
  color: #666;
}







